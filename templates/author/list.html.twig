{% block title %}Liste des Auteurs{% endblock %}

{% block body %}
    <h1 classe="titre">Liste des Auteurs</h1>

    <p>Nombre total d'auteurs : {{ authors|length }}</p>  <!-- Affichage du nombre d'auteurs -->
    <table class="table-authors">
        <thead>
            <tr>
               <th>Image</th>
                <th>Nom d'utilisateur</th>
                <th>Email</th>
                <th>Nombre de livres</th>
                <th>action</th>
            </tr>
        </thead>
        <tbody>
            {% for author in authors %}
                <tr>
                    <td> 
                         <img src="{{ asset(author.picture) }}" alt="{{ author.username }}" style="width: 80px; height: auto; border-radius: 50%;"> 
                     </td> 
                    <td>{{ author.username  | upper }}</td>
                    <td>{{ author.email }}</td>
                    <td>{{ author.nb_books }}</td>
                       <td><a href="{{ path('author_details', {'id': author.id}) }}">DÃ©tails</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" style="text-align: center;">Aucun auteur disponible</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

<style>

    table.table-authors {
        width: 100%;
        border-collapse: collapse;
        margin: 25px 0;
        font-size: 18px;
        text-align: left;
    }

    table.table-authors thead tr {
        background-color: #009879;
        color: #ffffff;
        text-align: left;
    }

    table.table-authors th, table.table-authors td {
        padding: 12px 15px;
        border: 1px solid #dddddd;
    }

    table.table-authors tbody tr {
        border-bottom: 1px solid #dddddd;
    }

    table.table-authors tbody tr:nth-of-type(even) {
        background-color: #f3f3f3;
    }

    table.table-authors tbody tr:last-of-type {
        border-bottom: 2px solid #009879;
    }

    img {
        width: 80px;
        height: auto;
        border-radius: 50%;
    }
</style>
